    </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/bt_physical_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textSize="20sp"
        android:background="@color/appBackground"
        android:textColor="@color/white"
