<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/appBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_physical_next"
        android:layout_marginBottom="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:id="@+id/linearLayout2">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/tl_height"
        style="@style/StyledTilEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Height (Cm)"
            android:imeOptions="actionNext" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tl_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_email"
        style="@style/StyledTilEditText">

        <EditText
            android:id="@+id/et_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Weight (Kg)"
            android:textColor="@color/white"
            android:imeOptions="actionGo" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/tl_waist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_email"
        style="@style/StyledTilEditText">

        <EditText
            android:id="@+id/et_waist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Waist (In)"
            android:textColor="@color/white"
            android:imeOptions="actionGo" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/do_you_smoke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Do you Smoke?"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"/>

        <LinearLayout
            android:id="@+id/layout_smoke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:weightSum="4">

            <TextView
                android:id="@+id/tv_smoke_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="YES"
                android:padding="10dp"
                android:textAlignment="center"
                android:background="@drawable/text_border_with_color"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="NO"
                android:padding="10dp"
                android:textAlignment="center"
                android:background="@drawable/text_border_with_color"
                android:textColor="@color/white"/>

        </LinearLayout>

        <TextView
            android:id="@+id/heart_attack_before"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Did you had heart attack before?"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:weightSum="4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="YES"
                android:padding="10dp"
                android:textAlignment="center"
                android:background="@drawable/text_border_with_color"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="NO"
                android:padding="10dp"
                android:textAlignment="center"
                android:background="@drawable/text_border_with_color"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="DON'T KNOW"
                android:padding="10dp"
                android:textAlignment="center"
                android:background="@drawable/text_border_with_color"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/bt_physical_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textSize="20sp"
        android:textColor="@color/appBackground"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>