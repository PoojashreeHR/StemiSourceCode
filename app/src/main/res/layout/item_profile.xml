<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="15dp">

    <android.support.v7.widget.AppCompatRadioButton
        android:id="@+id/profile_check"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:buttonTint="@color/selection_green"
        />

    <com.stemi.stemiapp.customviews.CircleImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/profile_image"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:id="@+id/profile_name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Praburaam"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/profile_age"
                android:textColor="@color/statsNameFontColor"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="36"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/seperator"
                android:textColor="@color/statsNameFontColor"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=", "
                android:layout_toRightOf="@+id/profile_age"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:id="@+id/profile_gender"
                android:textColor="@color/statsNameFontColor"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Male"
                android:layout_toRightOf="@+id/seperator"
                />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>