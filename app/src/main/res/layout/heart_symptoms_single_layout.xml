<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.stemi.stemiapp.customviews.CircleImageView
        android:id="@+id/symtonsImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/tvSymptomsNumb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/symtonsImg"
        android:layout_toEndOf="@+id/symtonsImg"
        android:background="@drawable/rounded_textview"
        android:textSize="12sp"
        android:text="1"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tvSymptoms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSymptomsNumb"
        android:layout_toRightOf="@+id/symtonsImg"
        android:layout_toEndOf="@+id/symtonsImg"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>